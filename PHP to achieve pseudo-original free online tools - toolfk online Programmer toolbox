```
 static function startConvertText ($ text, $ target_lang) {
    $ Target = StatusHelper :: $ LANG [$ target_lang];
    $ Tran_res = Trans :: translate ($ text, "auto", $ target);
    $ From = $ tran_res [ "from"];
    $ To = $ tran_res [ "to"];
    if ($ from == $ to) {
        $ Tmp_target = $ from == "zh" "en": "zh";?
        $ Baidu_text = self :: translate ($ text, $ to, $ tmp_target);
    } Else {
        $ Tmp_target = $ from == "zh" "en": "zh";?
        $ Baidu_text = self :: translate ($ text, $ from, $ tmp_target);
    }

    $ Tr = new TranslateClient (); 
    $ Tr-> setTarget ($ target_lang); 
    return $ tr-> translate ($ baidu_text);
}
